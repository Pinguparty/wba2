%h1 Nutzerliste

%table
  %thead
    %tr
      %th Nachname
      %th Vorname
      %th Adresse
      %th Email
      %th Blockiert
      %th Bemerkungen
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.family_name
        %td= user.given_name
        %td= user.adress
        %td= user.email
        %td= user.blocked
        %td= user.remarks
        %td= link_to 'Details', user
        %td= link_to 'Ändern', edit_user_path(user)
        %td= link_to 'Löschen', user, method: :delete, data: { confirm: 'Sind Sie sicher?' }

%br

= link_to 'Neuer Nutzer', new_user_path
